DC_SETUP_TYPE=${DC_SETUP_TYPE:-"AUTO"}
CONFIG_FILE=${CONFIG_FILE:-"dns-companion.yml"}
CONFIG_PATH=${CONFIG_PATH:-"/config/"}
DEFAULT_POLL_DOCKER_EXPOSE_CONTAINERS=${DEFAULT_POLL_DOCKER_EXPOSE_CONTAINERS:-"TRUE"}
DEFAULT_POLL_DOCKER_FILTER_TYPE=${DEFAULT_POLL_DOCKER_FILTER_TYPE:-"none"}
DEFAULT_POLL_DOCKER_HOST=${DEFAULT_POLL_DOCKER_HOST:-"unix:///var/run/docker.sock"}
DEFAULT_POLL_DOCKER_PROCESS_EXISTING=${DEFAULT_POLL_DOCKER_PROCESS_EXISTING:-"TRUE"}
DEFAULT_POLL_DOCKER_RECORD_REMOVE_ON_STOP=${DEFAULT_POLL_DOCKER_RECORD_REMOVE_ON_STOP:-"FALSE"}
DEFAULT_POLL_DOCKER_SWARM_MODE=${DEFAULT_POLL_DOCKER_SWARM_MODE:-"FALSE"}
DEFAULT_POLL_TRAEFIK_FILTER_TYPE=${DEFAULT_POLL_TRAEFIK_FILTER_TYPE:-"none"}
DEFAULT_POLL_TRAEFIK_INTERVAL=${DEFAULT_POLL_TRAEFIK_INTERVAL:-"60"}
DEFAULT_POLL_TRAEFIK_RECORD_REMOVE_ON_STOP=${DEFAULT_POLL_TRAEFIK_RECORD_REMOVE_ON_STOP:-"FALSE"}
DEFAULT_POLL_TRAEFIK_PROCESS_EXISTING=${DEFAULT_POLL_TRAEFIK_PROCESS_EXISTING:-"TRUE"}
LOG_FILE=${LOG_FILE:-"cdc.log"}
LOG_LEVEL=${LOG_LEVEL:-"info"}
LOG_PATH=${LOG_PATH:-"/logs/"}
LOG_TIMESTAMPS=${LOG_TIMESTAMPS:-"TRUE"}
LOG_TYPE=${LOG_TYPE:-"console"}

