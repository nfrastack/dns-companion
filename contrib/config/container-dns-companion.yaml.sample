# Example: Including another YAML file
include: dns-extra.yaml

general:
  log_level: "info"
  log_timestamps: true
  dry_run: false
  poll_profiles:
    - docker

defaults:
  record:
    type: "A"
    ttl: 300
    # target: "target.example.com"  # (Optional) Set a default target
    update_existing: true
    allow_multiple: false

providers:
  providerexample:
    type: "cloudflare"
    api_token: "your_api_token_here"

polls:
  pollexample:
    type: "docker"
    host: "unix:///var/run/docker.sock"   #Unix socket
    #host: "tcp://docker.example.com:2376" #TLS
    expose_containers: true
    filter_type: "none"
    process_existing_containers: false
    record_remove_on_stop: true
    #tls:
    #  verify: true
    #  ca: "/etc/docker/certs/ca.pem"
    #  cert: "/etc/docker/certs/cert.pem"
    #  key: "/etc/docker/certs/key.pem"

  pollexample2:
    type: traefik
    poll_url: http://traefik:8080/api/http/routers
    poll_interval: 30s  # or 60, 1m, 1h, etc.
    #config_path: /etc/traefik/dynamic

domains:
  domainexample:
    name: "example.com"
    provider: "providerexample"
    zone_id: "your_zone_id_here"
    record:
      type: "A"
      ttl: 60
      target: "192.0.2.1"
      update_existing: true
      allow_multiple: true
    exclude_subdomains:
      - dev
      - staging
