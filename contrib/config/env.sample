# Sample .env for DNS Companion

# If true don't perform actual updates
DRY_RUN=false

# Logging
LOG_LEVEL=verbose
LOG_TIMESTAMPS=true

# Default DNS record settings (maps to defaults.record in config)
DEFAULT_RECORD_TYPE=A
DEFAULT_RECORD_TARGET=1.2.3.4
DEFAULT_RECORD_TTL=120
DEFAULT_RECORD_UPDATE_EXISTING=true

# Provider: Cloudflare
PROVIDER_DNSPROV01_TYPE=cloudflare
PROVIDER_DNSPROV01_API_TOKEN=your-cloudflare-token
PROVIDER_DNSPROV01_API_EMAIL=you@example.com

# --- Secret file support example ---
# PROVIDER_DNSPROV01_API_TOKEN=file:/run/secrets/cloudflare_token

# Poll provider: Docker
POLL_POLLPROV01_TYPE=docker
POLL_POLLPROV01_API_URL=unix:///var/run/docker.sock
POLL_POLLPROV01_API_AUTH_USER=
POLL_POLLPROV01_API_AUTH_PASS=
POLL_POLLPROV01_EXPOSE_CONTAINERS=true
POLL_POLLPROV01_HOST=unix:///var/run/docker.sock

# --- Docker TLS options (optional, for secure remote Docker access) ---
POLL_POLLPROV01_TLS_VERIFY=true
POLL_POLLPROV01_TLS_CA=/etc/docker/certs/ca.pem
POLL_POLLPROV01_TLS_CERT=/etc/docker/certs/cert.pem
POLL_POLLPROV01_TLS_KEY=/etc/docker/certs/key.pem

# Remove DNS records on container stop
# POLL_POLLPROV01_RECORD_REMOVE_ON_STOP=true

# Domain profile: mydomain
DOMAIN_MYDOMAIN_NAME=example.com
DOMAIN_MYDOMAIN_ZONE_ID=cf-zone-id
DOMAIN_MYDOMAIN_PROVIDER=cloudflare
DOMAIN_MYDOMAIN_TTL=300
DOMAIN_MYDOMAIN_RECORD_TYPE=A
DOMAIN_MYDOMAIN_TARGET=5.6.7.8
DOMAIN_MYDOMAIN_UPDATE_EXISTING=true
DOMAIN_MYDOMAIN_PROXIED=false

# --- Domain profile: mydomain (advanced options) ---
# Multiple A/AAAA record support
# DOMAIN_MYDOMAIN_RECORD_TYPE_A_MULTIPLE=true
# DOMAIN_MYDOMAIN_RECORD_TYPE_AAAA_MULTIPLE=false
# Domain-level subdomain filtering
# DOMAIN_MYDOMAIN_INCLUDE_SUBDOMAINS=api,web
# DOMAIN_MYDOMAIN_EXCLUDE_SUBDOMAINS=internal,dev

# Another domain profile
DOMAIN_ANOTHERDOMAIN_NAME=another.com
DOMAIN_ANOTHERDOMAIN_TTL=180
DOMAIN_ANOTHERDOMAIN_RECORD_TYPE=CNAME
DOMAIN_ANOTHERDOMAIN_TARGET=alias.example.com
DOMAIN_ANOTHERDOMAIN_PROVIDER=cloudflare
DOMAIN_ANOTHERDOMAIN_ZONE_ID=cf-zone-id-2
DOMAIN_ANOTHERDOMAIN_UPDATE_EXISTING=true
